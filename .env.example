# Example environment variables for mt5-mcp-ui
# Copy this file to .env and fill in your values

# ===== Application Mode =====
# app: UI only, connects to remote MCP server (default for non-Windows)
# mcp: Full MCP server with MT5 tools (Windows only)
MT5_MODE=mcp

# ===== MCP Server URL (App Mode) =====
# Required when running in App mode to connect to remote MCP server
MT5_MCP_URL=http://your-mcp-server:7860/gradio_api/mcp/sse
MCP_TRANSPORT=sse  # 'sse' or 'streamable_http'

# ===== LLM Provider Configuration =====
# Choose one or more providers
# Set to 'disabled' to hide a provider from the UI

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Anthropic (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Azure OpenAI (Cognitive Services)
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# Azure AI Foundry (DeepSeek, Phi, Mistral)
AZURE_AI_ENDPOINT=https://your-resource.services.ai.azure.com/
AZURE_AI_API_KEY=your-azure-ai-key
AZURE_AI_DEPLOYMENT=DeepSeek-R1-0528

# Google Gemini
GOOGLE_API_KEY=your-google-api-key

# GitHub Models
GITHUB_TOKEN=your-github-token

# xAI (Grok)
XAI_API_KEY=your-xai-api-key

# Ollama (Local)
OLLAMA_BASE_URL=http://localhost:11434/v1

# ===== Gradio Server Configuration =====
GRADIO_SERVER_PORT=7860
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SHARE=false

# ===== Wizard Configuration =====
SKIP_WIZARD=false

# ===== MT5 MCP Configuration =====
MT5_MCP_LOG_FILE=logs/mt5_mcp.log

# ===== HuggingFace Configuration =====
# For deploying to HuggingFace Spaces (auto-detects SPACE_ID)
HF_TOKEN=your-huggingface-token
